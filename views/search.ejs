<html lang="en">
<head>
    <script src="src/scripts.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Popcorn Preferences</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body { 
            font-family: 'Roboto', sans-serif; 
            background-color: #f3f4f6;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            animation: fade-in 1s ease-in-out;
        }
        .movie-details {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .movie-details__poster {
            width: 30%;
        }
        .movie-details__poster img {
            width: 100%;
            height: auto;
        }
        .movie-details__content {
            width: 70%;
            padding-left: 20px;
        }
        .movie-details__title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: slide-in 1s ease-in-out;
        }
        .movie-details__overview {
            margin-bottom: 20px;
        }
        .movie-details__additional {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .movie-details__release-date,
        .movie-details__vote-average {
            color: #888;
        }
        .recommendations {
            margin-top: 40px;
        }
        .recommendations__title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .recommendations__list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .recommendations__item {
            width: calc(33.33% - 10px);
            margin-bottom: 20px;
            animation: scale-in 1s ease-in-out;
        }
        .recommendations__item img {
            width: 100%;
            height: auto;
        }
        .recommendations__item-title {
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }
        
    </style>
</head>
<body>
    <!-- Page Content -->
    <div class="container">
        <div class="movie-details">
            <!-- Movie Poster -->
            <div class="movie-details__poster">
                <img src="https://image.tmdb.org/t/p/w500<%= details.poster_path %>" alt="<%= details.title %> Poster">
            </div>
            <!-- Movie Details -->
            <div class="movie-details__content">
                <h1 class="movie-details__title"><%= details.title %></h1>
                <p class="movie-details__overview"><%= details.overview %></p>
                <!-- Additional details here -->
                <div class="movie-details__additional">
                    <span class="movie-details__release-date"><%= details.release_date %></span>
                    <span class="movie-details__vote-average"><%= details.vote_average %> / 10</span>
                </div>
                <!-- Genre, Director, etc. -->
            </div>
        </div>
        <div class="recommendations">
            <h2 class="recommendations__title">Recommendations</h2>
            <div class="recommendations__list">
                <!-- Recommendation items here -->
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">

            <form action="/search" method="GET">
                <div class="mt-8 grid grid-cols-3 gap-8">
                    <% if (recommendations) { %>
                        <div class="recommendations__list overflow-x-auto flex flex-nowrap">
                            <% recommendations.forEach(function(recommendation) { %>
                            <div class="bg-gray-50 p-4 rounded-xl animated slideIn">
                                <button type="submit" name="image" value="<%= recommendation.title %>">
                                    <img src="https://image.tmdb.org/t/p/w500<%= recommendation.poster_path %>" alt="<%= recommendation.title %>" class="w-60 h-80 rounded-lg mb-4">
                                </button>                                            
                                <div name="title" id=class="text-center text-sm"><%= recommendation.title %></div>
                            </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div>No movies to display.</div>
                    <% } %>
                </div>
            </form>
        </div>


    <script>

    </script>
</body>
</html>