    <style>
        body { 
            font-family: 'Roboto', sans-serif; 
            background-color: #f3f4f6;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            animation: fade-in 1s ease-in-out;
        }
        .movie-details {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .movie-details__poster {
            width: 30%;
        }
        .movie-details__poster img {
            width: 100%;
            height: auto;
        }
        .movie-details__content {
            width: 70%;
            padding-left: 20px;
        }
        .movie-details__title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            animation: slide-in 1s ease-in-out;
        }
        .movie-details__overview {
            margin-bottom: 20px;
        }
        .movie-details__additional {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .movie-details__release-date,
        .movie-details__vote-average {
            color: #888;
        }
        .recommendations {
            margin-top: 40px;
        }
        .recommendations__title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .recommendations__list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .recommendations__item {
            width: calc(33.33% - 10px);
            margin-bottom: 20px;
            animation: scale-in 1s ease-in-out;
        }
        .recommendations__item img {
            width: 100%;
            height: auto;
        }
        .recommendations__item-title {
            font-size: 16px;
            font-weight: bold;
            margin-top: 10px;
        }
        
    </style>
</head>
<body>
    <!-- Page Content -->
    <div class="container">
        <div class="movie-details">
            <!-- Movie Poster -->
            <div class="movie-details__poster">
                <img src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" alt="<%= movie.title %> Poster">
            </div>
            <!-- Movie Details -->
            <div class="movie-details__content">
                <h1 class="movie-details__title"><%= movie.title %></h1>
                <p class="movie-details__overview"><%= movie.overview %></p>
                <!-- Additional details here -->
                <div class="movie-details__additional">
                    <span class="movie-details__release-date"><%= movie.release_date %></span>
                    <span class="movie-details__vote-average"><%= movie.vote_average %> / 10</span>
                </div>
                <!-- Genre, Director, etc. -->
            </div>
        </div>
        <div class="recommendations">
            <h2 class="recommendations__title">Recommendations</h2>
            <div class="recommendations__list">
                <!-- Recommendation items here -->
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <form action="/search" method="GET">
            <div class="mt-8 grid grid-cols-3 gap-8">
                <% if (recommendations) { %>
                    <% recommendations.forEach(function(recommendation) { %>
                    <div class="bg-gray-50 p-4 rounded-xl animated slideIn">
                        <button type="submit" name="image" value="<%= recommendation.title %>">
                            <img src="https://image.tmdb.org/t/p/w500<%= recommendation.poster_path %>" alt="<%= recommendation.title %>" class="w-full h-auto rounded-lg mb-4">
                        </button>                                            
                        <div name="title" id=class="text-center text-sm"><%= recommendation.title %></div>
                    </div>
                    <% }) %>
                <% } else { %>
                    <div>No movies to display.</div>
                <% } %>
            </div>
        </form>
        <!-- Page Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-white shadow-xl rounded-lg overflow-hidden mb-8">
                <!-- Movie Details -->
                <div class="md:flex">
                    <!-- Movie Poster -->
                    <div class="md:w-1/4 bg-cover bg-center" style="background-image: url('https://image.tmdb.org/t/p/w500<%= movie.poster_path %>')">
                        <!-- Image will cover this div -->
                    </div>
                    <!-- Movie Content -->
                    <div class="md:w-3/4 p-4 md:p-8">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= movie.title %></h2>
                        <p class="text-gray-700 mb-4"><%= movie.overview %></p>
                        <!-- Additional movie details here -->
                        <div class="flex mb-4">
                            <span class="text-gray-600 mr-2"><%= movie.release_date %></span>
                            <span class="text-gray-600"><%= movie.vote_average %> / 10</span>
                        </div>
                        <!-- Genre, Director, etc. -->
                    </div>
                </div>
            </div>
        </div>
    </div>

